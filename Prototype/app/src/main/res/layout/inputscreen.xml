<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="1002dp"
        android:layout_height="67dp"
        app:srcCompat="@color/davys_grey"
        tools:layout_editor_absoluteX="-221dp"
        tools:layout_editor_absoluteY="306dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="626dp"
        android:layout_height="316dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/timberwolf" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="530dp"
        android:layout_height="286dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/light_green"
        tools:layout_editor_absoluteX="80dp" />

    <EditText
        android:id="@+id/decksInput"
        android:layout_width="227dp"
        android:layout_height="59dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:hint="1"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="210dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Enter How Many Decks You are Playing With"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/decksInput"
        app:layout_constraintTop_toTopOf="@+id/decksInput" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="206dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:text="Enter The Betting Value"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/betInput"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="100"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/inputButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="297dp"
        android:layout_marginBottom="22dp"
        android:background="@color/light_green"
        android:onClick="inputButtonClicked"
        android:text="DONE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="520dp"
        android:layout_height="98dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:background="@color/light_green"
        android:fontFamily="cursive"
        android:text="WELCOME TO 21"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

